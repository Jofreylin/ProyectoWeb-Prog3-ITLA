@model WebApp_Prog3.Models.UserPoster
@using WebApp_Prog3.Models;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    @using (Html.BeginForm("Create", "UserPoster", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        @Html.AntiForgeryToken()
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group ">
                @Html.LabelFor(model => model.NombreEmpresa, new { @class = "col-md-4 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmarEmail, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmarEmail, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Contra, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Contra, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmarContra, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmarContra, new { @class = "form-control" })
                </div>
            </div>
            <h5>UBICACION</h5>
            <div class="form-group">
                @Html.LabelFor(m => m.NombreCalle, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.NombreCalle, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NombrePais, "Pais", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Pais", null, "-- Pais --", htmlAttributes: new { @class = "form-control", @id = "Pais", onchange = "DropDownProductList();" })
                    @Html.ValidationMessageFor(m => m.NombrePais, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NombreCiudad, "Ciudad", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Ciudad", null, "-- Ciudad --", htmlAttributes: new { @class = "form-control", @id = "fufu" })
                    @Html.ValidationMessageFor(m => m.NombreCiudad, "", new { @class = "text-danger" })
                </div>
            </div>
            @*<select>
                    <option value="" selected disabled>Pais</option>
                    @foreach (var m in ViewBag.ListPais)
                    {
                        <option>@m.Nombre</option>
                    }
                </select>*@

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Registrar" />
                </div>
            </div>
        </div>

    }
</div>
