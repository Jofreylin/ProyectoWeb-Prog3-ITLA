@model WebApp_Prog3.Models.Login
@{

        Layout = "~/View/Shared/LayoutAdmin.cshtml";
        if (!String.IsNullOrEmpty(ViewBag.Message))
        {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewBag.Message
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}

@using (Html.BeginForm("Index", "UserAdmin", FormMethod.Post))
{
    if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
            <div class="alert alert-warning" role="alert">
                Ya estas logeado!<a>@Html.ActionLink(" ~Click aqui~ ", "LogOut", "UserAdmin", null, new { @class = "alert-link" })</a>Para cerrar sesion.
            </div>
            <hr />
            <a>@Html.ActionLink("Administrar Cuenta", "ProfileAcc", "UserAdmin", null, new { @class = "btn btn-danger btn-lg" })</a>
        }
        else if (User.IsInRole("Poster"))
        {
            <div class="alert alert-warning" role="alert">
                Ya estas logeado como Poster!<a>@Html.ActionLink(" ~Click aqui~ ", "LogOut", "UserPoster", null, new { @class = "alert-link" })</a>Para cerrar sesion.
            </div>
            <hr />
            <a>@Html.ActionLink("Administrar Cuenta", "ProfileAcc", "UserPoster", null, new { @class = "btn btn-danger btn-lg" })</a>
        }

    }
    else
    {


        <div class="form-group">
            @Html.LabelFor(m => m.Usuario)
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Contra)
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Contra, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-0">

                <input type="submit" value="Iniciars Sesion" class="btn btn-lg btn-primary" />

            </div>
        </div>
    }
}

