@model IEnumerable<WebApp_Prog3.Models.Post>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(canPage: true, rowsPerPage: 20);
}
<div class="row">
    <div class="col-8">
        @using (Html.BeginForm("Busqueda", "Home", FormMethod.Post, new { @class = "form-inline " }))
        {

            @Html.TextBox("buscar", null, new { @class = "form-control mr-sm-4", @placeholder = "Puesto especifico o empresas" })
            <button class="btn btn-outline-primary " type="submit">Buscar</button>


            @*<input class="form-control mr-sm-2" type="search" placeholder="Categoria" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>*@
        }

    </div>
    <div class="col-4">
        <button class="btn btn-success my-2 my-sm-0 float-right">Postear un trabajo</button>
    </div>
</div>
<br />
<div class="row">
    <div class="col-12">
        <h5>Puestos de trabajo publicados hoy</h5>
    </div>
    <br />
    @foreach (var cate in ViewBag.ListCategories)
    {
        <div class="col-12">
            <br />
            <div class="row">
                <div class="col-12">
                    <div class="text-center">
                        <strong class=""> @cate.Nombre </strong>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-12">
                    <table class="table table-bordered table-hover bg-white">
                        <thead class="">
                            <tr>
                                <th scope="col">Ubicacion</th>
                                <th scope="col">Posicion</th>
                                <th scope="col">Empresa</th>
                            </tr>
                        </thead>
                        @foreach (var post in Model)
                        {

                            if (post.Categorias == cate.Nombre)
                            {
                                <tbody>
                                    <tr>
                                        <td></td>
                                        <td>@Html.DisplayFor(model => post.NombrePosicion)</td>
                                        <td>@Html.DisplayFor(model => post.Posters)</td>
                                    </tr>
                                </tbody>
                            }

                        }
                    </table>

                </div>

            </div>
        </div>
    }

</div>

